<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageButton
            android:background="@color/transparent"
            android:id="@+id/backregister"
            android:layout_weight="2"
            android:src="@drawable/ic_back_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/White"
                android:textStyle="bold"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Registrarse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:src="@drawable/ic_user_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <LinearLayout
            android:id="@+id/ll4register"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:text="Ingresar los datos"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_userin_white"
                android:inputType="text"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/White"
                android:id="@+id/createnombre"
                android:layout_gravity="center"
                android:hint=" Nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_userin_white"
                android:inputType="text"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/White"
                android:id="@+id/createapellido"
                android:layout_gravity="center"
                android:hint=" Apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_userin_white"
                android:inputType="number"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/White"
                android:id="@+id/creatematricula"
                android:layout_gravity="center"
                android:hint=" Matricula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_mail_white"
                android:textColor="@color/White"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/createuser"
                android:layout_gravity="center"
                android:hint=" Correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_contrasena_white"
                android:inputType="textPassword"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/White"
                android:id="@+id/createcontra"
                android:layout_gravity="center"
                android:hint=" ContraseÃ±a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/white" />



            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvregisterft"
                    app:cardBackgroundColor="@color/Black"
                    app:cardCornerRadius="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                   <TextView
                       android:textColor="@color/white"
                       android:text="Completar Registro"
                       android:padding="15dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>